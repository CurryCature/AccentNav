<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/app_logo"
        tools:ignore="MissingConstraints" />

    <!--  <Button
          android:id="@+id/btn_upl"
          android:layout_width="60dp"
          android:layout_height="50dp"
          android:layout_marginEnd="348dp"
          android:layout_marginBottom="4dp"
          android:background="@drawable/btn_selector1"
          android:backgroundTint="@color/btn_color_selector"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent" /> -->

    <TextView
        android:id="@+id/text_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Hold the microphone to record"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_accurate_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo" />

    <TextView
        android:id="@+id/text_accurate_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Here's our text suggestion:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/text_sentence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_record" />

    <TextView
        android:id="@+id/text_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="'The arrival of spring brings warmer temperatures and longer days, signaling the end of winter. You can hear the birds chirping and admire the beauty of the bloomed colorful flowers, while admiring the modern architecture of the city center.'"
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@id/timerTextView"
        app:layout_constraintTop_toBottomOf="@id/text_accurate_result"
        app:layout_constraintVertical_bias="0.151"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Minimum record duration: 5 seconds"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_mic"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/text_sentence"
        app:layout_constraintVertical_bias="0.382" />

    <!--<Button
        android:id="@+id/btn_mic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerTextView" />-->

    <Button
        android:id="@+id/btn_mic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/circle"
        app:layout_constraintEnd_toEndOf="@id/circle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/circle"
        app:layout_constraintTop_toTopOf="@id/circle" />

    <View
        android:id="@+id/circle"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="@drawable/circle"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/circle1"
        app:layout_constraintEnd_toEndOf="@id/circle1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/circle1"
        app:layout_constraintTop_toTopOf="@id/circle1" />

    <View
        android:id="@+id/circle1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_up"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerTextView" />

    <com.example.accucent.RingFillView
        android:id="@+id/ring"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/ring"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerTextView" />

    <Button
        android:id="@+id/btn_up"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="UPLOAD"
        android:textColor="@color/btn_color_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_mic" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="timerTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
