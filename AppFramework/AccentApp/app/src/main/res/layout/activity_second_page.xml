<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SecondPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="163dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record your voice here to detect your accent"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="200dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For a more accurate result try this text!"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="250dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accurate sentence!!"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="300dp" />

    <Button
        android:id="@+id/btn_mic"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|start"
        android:background="@drawable/baseline-mic-24"
        android:backgroundTint="@color/btn_color_selector"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="31dp" />
</androidx.constraintlayout.widget.ConstraintLayout>